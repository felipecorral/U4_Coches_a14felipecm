<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".U4_Coches">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radiob_add"
                android:layout_width="@dimen/cero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Añadir"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/radoib_over"
                android:layout_width="@dimen/cero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sobreescribir"/>

        </RadioGroup>

        <EditText
            android:id="@+id/edit_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe la marca de coche"
            android:background="@color/colorVerde"/>

        <Button
            android:id="@+id/button_add_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Añadir/Sobreescribir"
            android:onClick="addOverAction"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Toast"
            android:onClick="mostrarFichero"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center"
            android:gravity="bottom">

            <Button
                android:layout_width="@dimen/cero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="lanzarList"
                android:text="ListView"
                />
            <Button
                android:layout_width="@dimen/cero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="lanzarSpin"
                android:text="Spinner"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>



</LinearLayout>
